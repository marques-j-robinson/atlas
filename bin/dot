#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things of that nature.
# Run it periodically to make sure you are running the latest and greatest.

set -e

export ZSH=$HOME/.dotfiles

# Install homebrew
$ZSH/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "> brew update"
brew update
brew upgrade

# Install software
echo "> $ZSH/script/install"
$ZSH/script/install